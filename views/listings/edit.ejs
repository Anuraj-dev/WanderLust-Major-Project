<% layout("/layouts/boilerplate") %>
<div class="row mt-3 mb-3">
  <div class="col-8 offset-2">
    <div class="card shadow-sm">
      <div class="card-header listing-form-header">
        <h3 class="card-title mb-0">
          <i class="bi bi-pencil-square"></i> Edit Your Listing
        </h3>
      </div>
      <div class="card-body">
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=PUT"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data">
          <div class="mb-4">
            <label for="title" class="form-label">
              <i class="bi bi-type-h1"></i> Title
            </label>
            <input
              type="text"
              name="listing[title]"
              id="title"
              placeholder="Enter a Catchy Title"
              class="form-control"
              value="<%= listing.title %>"
              required />
            <div class="valid-feedback">Title looks good!</div>
          </div>

          <div class="mb-4">
            <label for="description" class="form-label">
              <i class="bi bi-file-text"></i> Description
            </label>
            <textarea
              type="text"
              name="listing[description]"
              placeholder="Keep it short yet effective"
              class="form-control"
              id="description"
              rows="3"
              required>
<%= listing.description %></textarea
            >
            <div class="invalid-feedback">Please enter a short description</div>
          </div>

          <div class="mb-4">
            <label class="form-label">
              <i class="bi bi-image"></i> Current Image
            </label>
            <div class="card mb-2">
              <div class="card-body p-2">
                <div class="text-center">
                  <img
                    src="<%= listing.image.url %>"
                    alt="Listing Image Preview"
                    class="img-thumbnail preview-img mb-2" />
                </div>
                <small class="text-muted d-block text-center">
                  Current Image Preview
                </small>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <label for="image" class="form-label">
              <i class="bi bi-cloud-arrow-up"></i> Update Image
            </label>
            <input
              type="file"
              name="listing[image]"
              class="form-control"
              id="image" />
            <small class="form-text text-muted"
              >Leave empty to keep current image</small
            >
          </div>

          <div class="mb-4">
            <label for="category" class="form-label">
              <i class="bi bi-tag"></i> Category
            </label>
            <div class="category-select-container">
              <select
                name="listing[category]"
                id="category"
                class="form-control category-select"
                required
              >
                <!-- placeholder, only selected when no category is set -->
                <option
                  value=""
                  disabled
                  <%= !listing.category ? 'selected' : '' %>
                >
                  Select a category...
                </option>
            
                <!-- dynamically render each enum value, marking the current one as selected -->
                <% categories.forEach(cat => { %>
                  <option
                    value="<%= cat %>"
                    <%= listing.category === cat ? 'selected' : '' %>
                  ><%= cat %></option>
                <% }) %>
              </select>
              <i class="bi bi-chevron-down category-select-arrow"></i>
            </div>
            <div class="invalid-feedback">Please select a category</div>
          </div>
                    
          <div class="row mb-4">
            <div class="col-md-4">
              <label for="price" class="form-label">
                <i class="bi bi-currency-rupee"></i> Price
              </label>
              <div class="input-group">
                <span class="input-group-text">â‚¹</span>
                <input
                  type="number"
                  name="listing[price]"
                  placeholder="1200"
                  class="form-control"
                  id="price"
                  value="<%= listing.price %>"
                  required />
              </div>
              <div class="invalid-feedback">Price should be valid</div>
            </div>

            <div class="col-md-8">
              <label for="location" class="form-label">
                <i class="bi bi-geo-alt-fill"></i> Location
              </label>
              <input
                type="text"
                name="listing[location]"
                placeholder="Guwahati"
                class="form-control"
                id="location"
                value="<%= listing.location %>"
                required />
              <div class="invalid-feedback">Location should be valid</div>
            </div>
          </div>

          <div class="mb-4">
            <label for="country" class="form-label">
              <i class="bi bi-flag-fill"></i> Country
            </label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              id="country"
              value="<%= listing.country %>"
              required />
            <div class="invalid-feedback">Country should be valid</div>
          </div>

          <div class="d-flex justify-content-end">
            <a
              href="/listings/<%= listing._id %>"
              class="btn btn-outline-secondary me-2">
              <i class="bi bi-x-lg"></i> Cancel
            </a>
            <button type="submit" class="btn btn-light color-btn text-white">
              <i class="bi bi-cloud-arrow-up"></i> Update Listing
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
