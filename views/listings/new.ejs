<% layout("/layouts/boilerplate") %>
<div class="row mt-3 mb-3">
  <div class="col-8 offset-2">
    <div class="card shadow-sm">
      <div class="card-header listing-form-header">
        <h3 class="card-title mb-0">
          <i class="bi bi-plus-square"></i> Create New Listing
        </h3>
      </div>
      <div class="card-body">
        <form
          method="POST"
          action="/listings"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data">
          <div class="mb-4">
            <label for="title" class="form-label">
              <i class="bi bi-type-h1"></i> Title
            </label>
            <input
              type="text"
              name="listing[title]"
              id="title"
              placeholder="Enter a Catchy Title"
              class="form-control"
              required />
            <div class="valid-feedback">Title looks good!</div>
          </div>

          <div class="mb-4">
            <label for="description" class="form-label">
              <i class="bi bi-file-text"></i> Description
            </label>
            <textarea
              type="text"
              name="listing[description]"
              placeholder="Keep it short yet effective"
              class="form-control"
              id="description"
              rows="3"
              required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
          </div>

          <div class="mb-4">
            <label for="image" class="form-label">
              <i class="bi bi-image"></i> Upload Listing Image
            </label>
            <input
              type="file"
              name="listing[image]"
              class="form-control"
              id="image"
              required />
            <small class="form-text text-muted"
              >Upload a high-quality image for better visibility</small
            >
          </div>

          <div class="mb-4">
            <label for="category" class="form-label">
              <i class="bi bi-tag"></i> Category
            </label>
            <div class="category-select-container">
              <select
                name="listing[category]"
                id="category"
                class="form-control category-select"
                required>
                <option value="" disabled selected>Select a category...</option>
                <% categories.forEach(cat => { %>
                <option value="<%= cat %>"><%= cat %></option>
                <% }) %>
              </select>
              <i class="bi bi-chevron-down category-select-arrow"></i>
            </div>
            <div class="invalid-feedback">Please select a category</div>
          </div>

          <div class="row mb-4">
            <div class="col-md-4">
              <label for="price" class="form-label">
                <i class="bi bi-currency-rupee"></i> Price
              </label>
              <div class="input-group">
                <span class="input-group-text">â‚¹</span>
                <input
                  type="number"
                  name="listing[price]"
                  placeholder="1200"
                  class="form-control"
                  id="price"
                  required />
              </div>
              <div class="invalid-feedback">Price should be valid</div>
            </div>

            <div class="col-md-8">
              <label for="location" class="form-label">
                <i class="bi bi-geo-alt-fill"></i> Location
              </label>
              <input
                type="text"
                name="listing[location]"
                placeholder="Guwahati"
                class="form-control"
                id="location"
                required />
              <div class="invalid-feedback">Location should be valid</div>
            </div>
          </div>

          <div class="mb-4">
            <label for="country" class="form-label">
              <i class="bi bi-flag-fill"></i> Country
            </label>
            <input
              type="text"
              name="listing[country]"
              placeholder="India"
              class="form-control"
              id="country"
              required />
            <div class="invalid-feedback">Country should be valid</div>
          </div>

          <div class="d-flex justify-content-end">
            <a href="/listings" class="btn btn-outline-secondary me-2">
              <i class="bi bi-x-lg"></i> Cancel
            </a>
            <button type="submit" class="btn btn-light color-btn text-white">
              <i class="bi bi-plus-lg"></i> Create Listing
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
